set -e

this=$(realpath $0)
perm=$(stat -c %a $this)

if [ -f /.stage-1-done ]; then
    # expand fs
    resize2fs "$(findmnt -no source /)"
    rm "$this"
    systemctl stop rc-local.service
else
    # regen ssh keys
    dpkg-reconfigure openssh-server
    systemctl enable ssh.service

    # expand root parition & change uuid
    rp="$(findmnt -no source /)"
    rpn="$(echo -e "$rp" | grep -Eo '[[:digit:]]*$')"
    rd="/dev/$(lsblk -no pkname "$rp")"
    uuid="$(cat /proc/sys/kernel/random/uuid)"
    echo -e "size=+, uuid=$uuid" | sfdisk -f -N "$rpn" "$rd"

    # change rootfs uuid
    uuid="$(cat /proc/sys/kernel/random/uuid)"
    echo -e "changing rootfs uuid: $uuid"
    tune2fs -U "$uuid" "$rp"
    sed -i "s|$(findmnt -fsno source '/')|UUID=$uuid|" '/etc/fstab'
    /boot/mk_extlinux

    ## net-config ##

    systemctl enable systemd-networkd.service
    systemctl enable dnsmasq.servive

    # setup for expand fs
    touch /.stage-1-done
    reboot
fi

